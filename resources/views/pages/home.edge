<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>AdonisJS - Code Input</title>

  @vite(['resources/css/app.css', 'resources/js/app.js'])
  

</head>
<body>
  <h1>Code Input</h1>
  
  <textarea id="code" placeholder="Enter your code here..."></textarea>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const codeTextarea = document.getElementById('code');

      // Restore textarea content on page load
      restoreTextareaContent();

      // Save textarea content as user types
      codeTextarea.addEventListener('input', () => {
        localStorage.setItem('currentCode', codeTextarea.value);
      });

      function restoreTextareaContent() {
        const savedCode = localStorage.getItem('currentCode');
        if (savedCode) {
          codeTextarea.value = savedCode;
        }
      }
    });
  </script>
</body>
</html>